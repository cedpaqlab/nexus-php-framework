{
    "name": "nexus-php/framework",
    "description": "Nexus PHP Framework - Modern PHP Framework with MySQL, Propel ORM, and best practices",
    "version": "0.1.0",
    "type": "project",
    "keywords": ["framework", "php", "mysql", "propel", "orm", "mvc", "rest", "api"],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "propel/propel": "^2.0@beta"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Models\\": "app/Models/",
            "Config\\": "config/",
            "Tests\\": "tests/"
        },
        "files": [
            "bootstrap/autoloader.php",
            "config/loader.php",
            "bootstrap/container.php",
            "bootstrap/propel.php"
        ],
        "classmap": [
            "config/Config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "migrate": "php scripts/migrate.php",
        "seed": "php scripts/seed.php",
        "fresh": "php scripts/fresh.php"
    }
}
