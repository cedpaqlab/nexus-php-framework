{
    "name": "php-framework/custom",
    "description": "Nexus PHP Framework - Modern PHP Framework with MySQL",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "propel/propel": "^2.0@beta"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "config/",
            "Tests\\": "tests/"
        },
        "files": [
            "bootstrap/autoloader.php",
            "config/loader.php",
            "bootstrap/container.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
